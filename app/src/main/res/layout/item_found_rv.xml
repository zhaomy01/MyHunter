<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/item_found_item_header" />

    <ImageView
        android:id="@+id/found_im_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/found_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/found_tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="#d6d6d6"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:text="Â¥"
            android:textColor="#E98E24"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/found_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#E98E24" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="#d6d6d6" />

    <TextView
        android:id="@+id/found_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/found_cim_five"
                style="@style/cricleImage"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="105dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/cricleImages"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="78dp"
                android:src="@mipmap/abc_btn_switch_to_on_mtrl" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/found_cim_four"
                style="@style/cricleImage"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/cricleImages"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="53dp"
                android:src="@mipmap/abc_btn_switch_to_on_mtrl" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/found_cim_three"
                style="@style/cricleImage"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="55dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/cricleImages"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28dp"
                android:src="@mipmap/abc_btn_switch_to_on_mtrl" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/found_cim_two"
                style="@style/cricleImage"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/cricleImages"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/abc_btn_switch_to_on_mtrl" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/found_cim_one"
                style="@style/cricleImage"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/found_tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:background="#d6d6d6" />

        <LinearLayout
            android:id="@+id/item_found_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_comments" />

            <TextView
                android:id="@+id/found_tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/found_gradient" />

</LinearLayout>
    </LinearLayout>