<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68BBCE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/register_iv_fh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="30dp"
            android:src="@mipmap/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="30dp"
            android:text="找回密码"
            android:textColor="#BDE3EB" />
    </RelativeLayout>

    <RelativeLayout style="@style/register_relativeLayout">

        <EditText
            android:id="@+id/register_et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="用户名/邮箱"
            android:textColor="@android:color/white"
            android:textColorHint="#BDE3EB"
            android:textCursorDrawable="@drawable/shape_cursor" />

        <View
            style="@style/register_view"
            android:layout_below="@id/register_et_username" />
    </RelativeLayout>

    <RelativeLayout style="@style/register_relativeLayout">

        <EditText
            android:id="@+id/register_et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="账号密码"
            android:textColor="@android:color/white"
            android:textColorHint="#BDE3EB"
            android:textCursorDrawable="@drawable/shape_cursor" />

        <View
            style="@style/register_view"
            android:layout_below="@id/register_et_password" />
    </RelativeLayout>

    <Button
        android:id="@+id/register_btn_agreen"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/shape_button_register"
        android:text="立即登录"
        android:textColor="@android:color/white"
        android:textSize="22sp" />
</LinearLayout>